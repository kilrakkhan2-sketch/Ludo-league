
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========= Helper Functions =========
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Checks for an isAdmin field in the user's Firestore document.
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // ========= ADMIN RULE: Global Access =========
    // This rule grants admins unrestricted read/write access across all storage paths.
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // ========= User-Specific Rules (Applied if user is NOT admin) =========

    // Profile Pictures: Users can read anyone's profile picture, but only write their own.
    match /profile-pictures/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId);
    }

    // KYC Documents: Users can only write to their own KYC folder.
    // Reading is restricted to the user. Admins can read via the global rule.
    match /kyc/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Deposit Screenshots: Users can only write to their own deposits folder.
    // Reading is restricted to the user. Admins can read via the global rule.
    match /deposits/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Match Result Screenshots: Users can only write their own result screenshots.
    // File name must start with the user's UID.
    // Any authenticated user can read them to verify results or for dispute resolution.
    match /match-results/{matchId}/{screenshotFile} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && screenshotFile.startsWith(request.auth.uid);
    }
    
    // Public content (e.g., news images, tournament banners) can be read by anyone.
    // Write access is admin-only via the global rule.
    match /public/{allPaths=**} {
        allow read: if true;
    }
  }
}
