
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========= Helper Functions =========
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true ||
        (exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
         get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true)
      );
    }

    // ========= ADMIN RULE: Global Access =========
    // This rule MUST come first. It grants admins unrestricted read/write access.
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // ========= Rules for Non-Admin Users =========
    // These rules are evaluated only if the user is NOT an admin.
    
    // Profile Pictures: Users can read anyone's (if public), but only write their own.
    match /profile-pictures/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId);
    }

    // KYC Documents: Users can only write to their own KYC folder. No one else can read.
    match /kyc/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Deposit Screenshots: Users can only write to their own deposits folder.
    match /deposits/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Match Result Screenshots: Authenticated users can read.
    // Users can only write if the filename starts with their UID (ensures they can't overwrite).
    match /match-results/{matchId}/{fileName} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && fileName.startsWith(request.auth.uid);
    }
    
    // Public content is readable by anyone (even unauthenticated).
    match /public/{allPaths=**} {
        allow read: if true;
    }
  }
}
