
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images
    match /profile-images/{userId}/{imageName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent deletion
    }
    
    // Payment screenshots
    match /payment-screenshots/{userId}/{imageName} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || getUserRole() == 'admin');
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // Result screenshots
    match /result-screenshots/{matchId}/{userId}/{imageName} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         resource._meta.matchParticipants.contains(request.auth.uid) ||
         getUserRole() == 'admin');
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // Admin uploads
    match /admin/{fileName} {
      allow read: if request.auth != null;
      allow write: if getUserRole() == 'admin';
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isParticipant(matchId, userId) {
      return get(/databases/$(database)/documents/matches/$(matchId))
        .data.currentPlayers.contains(userId);
    }
  }
}
