
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Admin check using custom claims
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Allow admin full access
    match /{allPaths=**} {
      allow read, write, delete: if isAdmin();
    }
  }
}
