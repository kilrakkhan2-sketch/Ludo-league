rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- Helper Functions --- //
    // Yah functions niyamon ko saaf aur padhne mein aasan banate hain.

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // User ka role Firestore se laata hai
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Alag-alag admin roles ko check karta hai
    function isSuperAdmin() {
      let role = getUserRole();
      return role == 'superadmin';
    }

    function isDepositAdmin() {
      let role = getUserRole();
      return role == 'deposit_admin';
    }

    function isKycAdmin() {
      let role = getUserRole();
      return role == 'kyc_admin';
    }

    // --- Storage Path Rules --- //

    //== PROFILE PICTURES ==//
    // Path: /profile-pictures/{userId}/<filename>
    match /profile-pictures/{userId}/{fileName} {
      // Padhein: Koi bhi user kisi ki bhi profile picture dekh sakta hai.
      allow read: if true;
      
      // Likhein (Upload/Update/Delete): User sirf apni profile picture hi badal sakta hai.
      allow write: if isSignedIn() && isOwner(userId);
    }

    //== DEPOSIT SCREENSHOTS ==//
    // Path: /deposit-screenshots/{userId}/<filename>
    match /deposit-screenshots/{userId}/{fileName} {
      // Padhein: User apna screenshot, ya deposit/super admin kisi ka bhi screenshot dekh sakta hai.
      allow read: if isSignedIn() && (isOwner(userId) || isDepositAdmin() || isSuperAdmin());
      
      // Likhein (Upload): User sirf apne liye hi screenshot upload kar sakta hai.
      allow write: if isSignedIn() && isOwner(userId);
    }

    //== KYC DOCUMENTS ==//
    // Path: /kyc-documents/{userId}/<filename>
    match /kyc-documents/{userId}/{fileName} {
      // Padhein: User apna document, ya kyc/super admin kisi ka bhi document dekh sakta hai.
      allow read: if isSignedIn() && (isOwner(userId) || isKycAdmin() || isSuperAdmin());
      
      // Likhein (Upload): User sirf apne liye hi document upload kar sakta hai.
      allow write: if isSignedIn() && isOwner(userId);
    }

    // Koi bhi anjaan path par access deny karein
    match /{allPaths=**} {
        allow read, write: if false;
    }
  }
}