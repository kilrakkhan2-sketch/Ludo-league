
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========= Helper Functions =========
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Use custom claims for efficient and secure admin checks.
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    // ========= ADMIN RULE: Global Access =========
    // This rule grants admins unrestricted read/write access across all storage paths.
    // It ensures that no matter the specific path, an admin will never have a permission issue.
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // ========= User-Specific Rules (Applied if user is NOT admin) =========

    // Profile Pictures: Users can read anyone's profile picture, but only write their own.
    match /profile-pictures/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId);
    }

    // KYC Documents: Users can only write to their own KYC folder.
    // Only the user themselves can read their document after uploading.
    match /kyc/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Deposit Screenshots: Users can only write to their own deposits folder.
    // Only the user themselves can read it.
    match /deposits/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Match Result Screenshots: Users can only write their own result screenshots.
    // Any authenticated user can read them to verify results.
    match /match-results/{matchId}/{screenshotFile} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && screenshotFile.startsWith(request.auth.uid + '_');
    }
    
    // Public content (e.g., news images) can be read by anyone.
    match /public/{allPaths=**} {
        allow read;
    }
  }
}
