
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ========= Helper Functions =========
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check for custom admin claim OR a specific field in the user's document.
      return request.auth != null && (
        request.auth.token.admin == true ||
        (exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
         get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true)
      );
    }

    // ========= ADMIN RULE: Global Read/Write Access =========
    match /{path=**} {
      allow read, write: if isAdmin();
    }

    // ========= Specific Path Rules =========
    
    // KYC Documents: Users can only write to their own folder. Admins can read.
    match /kyc/{userId}/{fileName} {
      allow read: if isAdmin();
      allow write: if isOwner(userId);
    }
    
    // Deposit Screenshots: Users can only write to their own folder. Admins can read.
    match /deposits/{userId}/{fileName} {
      allow read: if isAdmin();
      allow write: if isOwner(userId);
    }

    // Match Result Screenshots: Users can write to their own subfolder.
    // Any authenticated player in the match or an admin can read the screenshots.
    match /match-results/{matchId}/{userId}/{allPaths=**} {
        allow read: if request.auth != null;
        allow write: if isOwner(userId);
    }
    
    // Public content is readable by anyone (e.g., tournament banners).
    // Write access is restricted to admins.
    match /public/{allPaths=**} {
        allow read: if true;
        allow write: if false; // Should be uploaded by admins via console or a trusted process
    }
  }
}
