
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users Collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || getUserRole() == 'superadmin';

      // Admins can read all users and manage roles
      allow read: if getUserRole() == 'superadmin' || getUserRole() == 'deposit_admin' || getUserRole() == 'match_admin';
      
      match /transactions/{transactionId} {
        allow read, create, update, delete: if request.auth.uid == userId || getUserRole() == 'superadmin';
      }
    }
    
    // Matches Collection
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (resource.data.creatorId == request.auth.uid || 
         getUserRole() == 'superadmin' || getUserRole() == 'match_admin');
      allow delete: if getUserRole() == 'superadmin' || getUserRole() == 'match_admin';
    }
    
    // Deposit Requests Collection
    match /deposit-requests/{depositId} {
        allow read, create: if request.auth != null;
        allow update: if getUserRole() == 'superadmin' || getUserRole() == 'deposit_admin';
    }

    // All transactions collection group
    match /{path=**}/transactions/{transactionId} {
      allow read: if getUserRole() == 'superadmin';
    }

    // Settings Collection
    match /settings/{settingId} {
        allow read: if request.auth != null;
        allow write: if getUserRole() == 'superadmin';
    }
    
    // Helper Functions
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isSuperAdmin() {
      return getUserRole() == 'superadmin';
    }
  }
}
