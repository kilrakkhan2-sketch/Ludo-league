
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSuperAdmin() {
      return getUserData(request.auth.uid).role == 'superadmin';
    }

    function isDepositAdmin() {
      let role = getUserData(request.auth.uid).role;
      return role == 'deposit_admin' || role == 'superadmin';
    }
    
    function isMatchAdmin() {
      let role = getUserData(request.auth.uid).role;
      return role == 'match_admin' || role == 'superadmin';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isExistingUser(userId) {
        return exists(/databases/$(database)/documents/users/$(userId));
    }

    // --- User Profiles ---
    match /users/{userId} {
      // Allow any signed-in user to read public profile data.
      allow read: if isSignedIn();
      
      // Allow a user to create their own document on signup, but not set a role or balance.
      allow create: if isOwner(userId) 
                    && request.resource.data.role == 'user'
                    && request.resource.data.walletBalance == 0;
      
      // Allow a user to update their own data, but not their role or balance.
      // Superadmin can update anything for any user.
      allow update: if (isOwner(userId) && !('role' in request.resource.data) && !('walletBalance' in request.resource.data))
                    || isSuperAdmin();

      // Only superadmin can delete users.
      allow delete: if isSuperAdmin();

      // --- User Transactions (Subcollection) ---
      match /transactions/{transactionId} {
        // Users can read their own transactions.
        // Superadmins can read all transactions (covered by collection group rule).
        allow read: if isOwner(userId) || isSuperAdmin();
        // Users can create their own transactions (e.g. entry fee, withdrawal request).
        // Admins also create transactions (e.g. deposit approval).
        allow create: if isOwner(userId) || isDepositAdmin() || isSuperAdmin();
        // No updates or deletes to maintain a clear history.
        allow update, delete: if false;
      }
    }
    
    // Allow superadmin to read all transactions via collection group query
    match /{path=**}/transactions/{transactionId} {
        allow read: if isSuperAdmin();
    }
    
    // --- Matches ---
    match /matches/{matchId} {
      // Any signed-in user can view matches.
      allow read: if isSignedIn();
      // Any signed-in user can create a match if they exist in the users collection.
      allow create: if isSignedIn() && isExistingUser(request.auth.uid);
      // Only the match creator, a match admin, or superadmin can update a match.
      allow update: if isSignedIn() && (resource.data.creatorId == request.auth.uid || isMatchAdmin() || isSuperAdmin());
      // Only match admins or superadmins can delete a match.
      allow delete: if isMatchAdmin() || isSuperAdmin();

      // --- Match Chat Messages (Subcollection) ---
       match /messages/{messageId} {
        // Only players in the match can read/write messages.
        allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.players;
      }
    }
    
    // --- Deposit Requests ---
    match /deposit-requests/{depositId} {
        // Users can read their own requests.
        // Deposit/Super admins can read all requests.
        allow read: if isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin());
        // A user can create their own deposit request.
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        // Only deposit admins or superadmins can approve/reject by updating.
        allow update: if isDepositAdmin(); 
        allow delete: if isSuperAdmin();
    }

    // --- Withdrawal Requests ---
    match /withdrawal-requests/{withdrawalId} {
        // Users can create their own requests and read them.
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow read: if isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin());
        // Deposit/Super admins can read/update all requests.
        allow update: if isDepositAdmin();
        allow delete: if isSuperAdmin();
    }

    // --- Settings ---
    match /settings/payment {
        // Any signed-in user can read the payment settings (e.g., to see the UPI ID).
        allow read: if isSignedIn();
        // Only superadmins can write/change the payment settings.
        allow write: if isSuperAdmin();
    }
  }
}
