rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------ Helper Functions ------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isServer() {
      return request.auth.token.firebase.sign_in_provider == "firebase";
    }

    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isDepositAdmin() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'deposit_admin' || role == 'superadmin';
    }

    function isMatchAdmin() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'match_admin' || role == 'superadmin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ------------------ USERS COLLECTION ------------------

    match /users/{userId} {
      // Cloud Functions get full access. Client access is handled below.
      allow read, write: if isServer();

      // Client-side rules
      allow read: if isSignedIn();
      allow create: if isOwner(userId)
                    && request.resource.data.role == 'user'
                    && request.resource.data.walletBalance == 0;
      allow update: if 
        (
          isOwner(userId) &&
          !('role' in request.resource.data.diff(resource.data).affectedKeys()) &&
          !('walletBalance' in request.resource.data.diff(resource.data).affectedKeys())
        )
        || isSuperAdmin();
      allow delete: if isSuperAdmin();

      // -------- User Transactions Subcollection --------
      match /transactions/{transactionId} {
        // Server access is inherited. Client rules below.
        allow read: if isOwner(userId) || isSuperAdmin();
        allow create: if isOwner(userId) || isDepositAdmin(); // Server can already create
        allow update, delete: if false;  // Immutable for clients
      }
    }

    // ------------------ MATCHES COLLECTION ------------------

    match /matches/{matchId} {
      // Cloud Functions can write, but client rules are more specific.
      allow write: if isServer();

      // Client-side rules
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // Any signed-in user can create a match.
      allow update: if isSignedIn()
        && (resource.data.creatorId == request.auth.uid || isMatchAdmin() || isSuperAdmin());
      allow delete: if isMatchAdmin() || isSuperAdmin();

      // -------- Messages Subcollection --------
      match /messages/{messageId} {
        allow read: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.players;
        allow write: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.players;
      }
    }

    // ------------------ DEPOSIT REQUESTS ------------------

    match /deposit-requests/{depositId} {
      allow read: if isServer() || (isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin()));
      allow create: if isServer() || (isSignedIn() && isOwner(request.resource.data.userId));
      allow update: if isServer() || isDepositAdmin();
      allow delete: if isServer() || isSuperAdmin();
    }

    // ------------------ WITHDRAWAL REQUESTS ------------------

    match /withdrawal-requests/{withdrawalId} {
       allow read: if isServer() || (isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin()));
      allow create: if isServer() || (isSignedIn() && isOwner(request.resource.data.userId));
      allow update: if isServer() || isDepositAdmin();
      allow delete: if isServer() || isSuperAdmin();
    }

    // ------------------ KYC REQUESTS ------------------

    match /kyc-requests/{kycId} {
      allow read: if isServer() || (isSignedIn() && (isOwner(resource.data.userId) || isSuperAdmin()));
      allow create: if isServer() || (isSignedIn() && isOwner(request.resource.data.userId));
      allow update, delete: if isServer() || isSuperAdmin();
    }

    // ------------------ SETTINGS DOCUMENT ------------------

    match /settings/payment {
      allow read: if isSignedIn();
      allow write: if isServer() || isSuperAdmin();
    }
  }
}
