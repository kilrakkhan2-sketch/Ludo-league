
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------ Helper Functions ------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isServer() {
      // In callable functions, there is no sign_in_provider. We identify server-side
      // operations by checking if the auth token is verified. This is a simplification.
      return request.auth.token.firebase.sign_in_provider == null || request.auth.token.firebase.sign_in_provider == "firebase";
    }
    
    function isAnyAdmin() {
        let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
        return role == 'superadmin' || role == 'deposit_admin' || role == 'withdrawal_admin' || role == 'match_admin';
    }

    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isDepositAdmin() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'deposit_admin' || role == 'superadmin';
    }
    
    function isWithdrawalAdmin() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'withdrawal_admin' || role == 'superadmin';
    }

    function isMatchAdmin() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'match_admin' || role == 'superadmin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ------------------ USERS COLLECTION ------------------

    match /users/{userId} {
      allow read, write: if isServer();

      allow read: if isSignedIn();
      allow create: if isOwner(userId)
                    && request.resource.data.role == 'user'
                    && request.resource.data.walletBalance == 0;
      allow update: if
        (
          (isOwner(userId) &&
          !('role' in request.resource.data.diff(resource.data).affectedKeys()) &&
          !('walletBalance' in request.resource.data.diff(resource.data).affectedKeys()))
          || isSuperAdmin()
        ) || (
          // Allow adding or removing a friend
          (request.resource.data.friends.hasAny(resource.data.friends) || resource.data.friends.hasAny(request.resource.data.friends))
        );

      allow delete: if isSuperAdmin();

      match /transactions/{transactionId} {
        allow read: if isOwner(userId) || isSuperAdmin();
        allow create: if isOwner(userId) || isDepositAdmin() || isWithdrawalAdmin() || isServer();
        allow update, delete: if false;
      }
      
      match /personal_notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ------------------ MATCHES & TOURNAMENTS ------------------
    match /matches/{matchId} {

      allow list: if isSignedIn();
      allow read: if isSignedIn();

      allow create: if isSignedIn() && isServer(); // Only allow creation via cloud function

      // Update rules
      allow update: if isSignedIn() && (
                      // Player joining a match
                      (
                        resource.data.status == 'open' &&
                        request.resource.data.players == resource.data.players.concat(request.auth.uid) &&
                        !(request.auth.uid in resource.data.players) &&
                        resource.data.players.size() < resource.data.maxPlayers &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.walletBalance >= resource.data.entryFee
                      ) ||
                      // Creator setting the room code
                      (
                         resource.data.status == 'ongoing' &&
                         request.auth.uid == resource.data.creatorId &&
                         'roomCode' in request.resource.data.diff(resource.data).affectedKeys() &&
                         request.resource.data.roomCode != resource.data.roomCode
                      ) ||
                      isMatchAdmin() || isSuperAdmin() || isServer()
                    );

      allow delete: if isMatchAdmin() || isSuperAdmin() || isServer();

      match /messages/{messageId} {
        allow read, write: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.players);
      }
      
       match /results/{userId} {
        // Allow create if user is a player in the match
        allow create: if isOwner(userId) && request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.players;
        allow read: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.players || isMatchAdmin());
        
        // Allow update only for confirmation, and only once.
        allow update: if isOwner(userId) 
                      && resource.data.status == 'submitted' // Can only update a submitted result
                      && request.resource.data.status == 'confirmed' // The only allowed status change
                      && !('screenshotUrl' in request.resource.data.diff(resource.data).affectedKeys()) // Cannot change screenshot
                      && !('submittedAt' in request.resource.data.diff(resource.data).affectedKeys()); // Cannot change submission time
                      
        allow delete: if isMatchAdmin();
      }
      
      match /admin-chat/{messageId} {
        allow read, write: if isAnyAdmin();
      }
    }

    match /tournaments/{tournamentId} {
      allow read: if isSignedIn();
      allow create: if isMatchAdmin() || isSuperAdmin();
      allow update: if (isSignedIn() && 
                        (
                            // Allow a user to join a tournament (add themselves to players array)
                            (request.resource.data.players.hasAny([request.auth.uid]) && !(request.auth.uid in resource.data.players))
                        )
                      ) || isMatchAdmin() || isSuperAdmin();
      allow delete: if isMatchAdmin() || isSuperAdmin();
    }

    // ------------------ FRIEND REQUESTS ------------------
    match /friend-requests/{requestId} {
        allow read: if isSignedIn() && (request.auth.uid == resource.data.from || request.auth.uid == resource.data.to);
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.from;
        allow update: if isSignedIn() && request.auth.uid == resource.data.to && request.resource.data.status != 'pending';
        allow delete: if isSignedIn() && (request.auth.uid == resource.data.from || request.auth.uid == resource.data.to);
    }

    // ------------------ OTHER COLLECTIONS ------------------

    match /announcements/{announcementId} {
      allow read: if isSignedIn();
      allow write: if isMatchAdmin() || isSuperAdmin();
    }

    match /deposit-requests/{depositId} {
      allow read: if isServer() || (isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin()));
      allow create: if isServer() || (isSignedIn() && isOwner(request.resource.data.userId));
      allow update: if isServer() || isDepositAdmin();
      allow delete: if isServer() || isSuperAdmin();
      
       match /admin-chat/{messageId} {
        allow read, write: if isAnyAdmin();
      }
    }

    match /withdrawal-requests/{withdrawalId} {
       allow read: if isServer() || (isSignedIn() && (isOwner(resource.data.userId) || isWithdrawalAdmin()));
      allow create: if isServer() || (isSignedIn() && isOwner(request.resource.data.userId));
      allow update: if isServer() || isWithdrawalAdmin();
      allow delete: if isServer() || isSuperAdmin();
      
       match /admin-chat/{messageId} {
        allow read, write: if isAnyAdmin();
      }
    }

    match /kyc-requests/{kycId} {
      allow read: if isServer() || (isSignedIn() && (isOwner(resource.data.userId) || isSuperAdmin()));
      allow create: if isServer() || (isSignedIn() && isOwner(request.resource.data.userId));
      allow update, delete: if isServer() || isSuperAdmin();
    }
    
    match /upi-accounts/{accountId} {
        allow read: if isSignedIn();
        allow write: if isSuperAdmin() || isServer();

        // Rules for daily statistics subcollection
        match /daily_stats/{date} {
          allow read: if isSuperAdmin();
          allow write: if isServer(); // Only server (cloud functions) can update daily stats
        }
    }

    match /settings/maintenance {
      allow read: if true;
      allow write: if isServer() || isSuperAdmin();
    }

    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isServer() || isSuperAdmin();
    }
  }
}
