
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user authentication and roles from their profile.
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole(userId) {
      // Safely access data, returning null if the document or field doesn't exist.
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSuperAdmin(userId) {
      return getUserRole(userId) == 'superadmin';
    }

    function isDepositAdmin(userId) {
      return getUserRole(userId) == 'deposit_admin' || isSuperAdmin(userId);
    }

    function isMatchAdmin(userId) {
      return getUserRole(userId) == 'match_admin' || isSuperAdmin(userId);
    }

    function isAdmin(userId) {
      return isSuperAdmin(userId) || isDepositAdmin(userId) || isMatchAdmin(userId);
    }
    
    function isVerifiedUser() {
      return getUserData(request.auth.uid).isVerified == true;
    }
    
    // Incoming data validation for UserProfile
    function isValidUserProfile(data) {
      return data.uid == request.auth.uid
          && data.name is string && data.name.size() > 0
          && data.email is string && data.email.matches('.*@.*')
          && data.role == 'user'
          && data.walletBalance == 0
          && data.isVerified == false;
    }
    
    // Incoming data validation for Match
    function isValidMatch(data) {
      return data.creatorId == request.auth.uid
          && data.title is string && data.title.size() > 1
          && data.entryFee is number && data.entryFee >= 0
          && data.maxPlayers is number && data.maxPlayers >= 2 && data.maxPlayers <= 4
          && data.privacy in ['public', 'private']
          && data.status == 'open'
          && data.players.size() == 1 && data.players[0] == request.auth.uid
          && (data.roomCode == null || (data.roomCode is string && data.roomCode.size() > 0));
    }
    
    // Incoming data validation for DepositRequest
    function isValidDepositRequest(data) {
       return data.userId == request.auth.uid
           && data.amount is number && data.amount > 0
           && data.transactionId is string && data.transactionId.size() > 0
           && data.screenshotURL is string && data.screenshotURL.matches('https?://.*')
           && data.status == 'pending'
           && data.userName == getUserData(request.auth.uid).name // Ensure correct user info
           && data.userEmail == getUserData(request.auth.uid).email;
    }

    // Rules for User Profiles
    match /users/{userId} {
      // Any authenticated user can read public profile data.
      allow read: if isAuthenticated();
      
      // A user can create their own profile with specific default values upon signup.
      allow create: if isOwner(userId) && isValidUserProfile(request.resource.data);
                      
      // A user can update their own non-critical info (name, username, photoURL).
      // A superadmin can update any field on any user's profile (e.g., role, balance).
      allow update: if (isOwner(userId) && !("role" in request.resource.data.keys()) && !("walletBalance" in request.resource.data.keys()) && !("isVerified" in request.resource.data.keys()))
                      || isSuperAdmin(request.auth.uid);
                      
      // Deleting users should be handled by a secure backend function, not allowed from the client.
      allow delete: if isSuperAdmin(request.auth.uid); 
    }

    // Rules for Matches
    match /matches/{matchId} {
      // Any authenticated user can read match data to see open games.
      allow read: if isAuthenticated();
      
      // A user can create a match if they are authenticated and provide valid data
      allow create: if isAuthenticated() && isValidMatch(request.resource.data);

      // A match admin or superadmin can update a match at any stage (e.g., for verification, cancellation).
      // A player can join a match by adding themselves to the players list if it's 'open'.
      // The creator can update their match only while it's 'open'.
      allow update: if isAdmin(request.auth.uid) || 
                      (resource.data.status == 'open' && (
                        // Player joining
                        (request.resource.data.players.size() == resource.data.players.size() + 1 && request.auth.uid in request.resource.data.players) ||
                        // Creator updating title/privacy
                        (request.auth.uid == resource.data.creatorId)
                      )) ||
                      // Creator submitting result screenshot
                      (resource.data.status == 'ongoing' && request.auth.uid == resource.data.creatorId && 'resultScreenshotURL' in request.resource.data.keys());

                      
      // The creator can only delete a match if it's still 'open' and no one else has joined.
      // Admins can delete matches if necessary.
      allow delete: if (resource.data.creatorId == request.auth.uid && resource.data.status == 'open' && resource.data.players.size() == 1)
                      || isSuperAdmin(request.auth.uid);
    }

    // Rules for User Transactions (subcollection of users)
    match /users/{userId}/transactions/{transactionId} {
        // Only the user themselves can read their transaction history.
        // Admins can read via collection group query.
        allow read: if isOwner(userId);
        
        // Transactions can only be created by server-side logic (e.g., Cloud Functions) or through controlled
        // admin actions (like approving a deposit), not directly by clients.
        // This rule is strict because it's a critical financial record.
        allow write: if false; 
    }

    // Rules for Deposit Requests
    match /deposit-requests/{depositId} {
      // The user who made the request and deposit admins/superadmins can read it.
      // For a user to LIST their requests, the client query MUST include a `where('userId', '==', request.auth.uid)` clause.
      allow read: if isDepositAdmin(request.auth.uid) || (resource.data != null && resource.data.userId == request.auth.uid);

      // A user can create their own deposit request with valid data.
      allow create: if isAuthenticated() && isValidDepositRequest(request.resource.data);

      // Only a deposit admin or superadmin can update a request (to approve or reject it).
      // The status must be changing from 'pending'.
      allow update: if isDepositAdmin(request.auth.uid) && resource.data.status == 'pending';
      
      // Deposit requests should not be deleted from the client to maintain a record.
      allow delete: if false;
    }
    
    // Rules for App Settings
    match /settings/payment {
      // All authenticated users need to read the UPI ID for deposits.
      allow read: if isAuthenticated();
      
      // Only a superadmin can change critical app settings like the UPI ID.
      allow write: if isSuperAdmin(request.auth.uid);
    }
    
    // Collection group match for transactions to allow admins to query across all users.
    match /{path=**}/transactions/{transactionId} {
      allow read: if isSuperAdmin(request.auth.uid);
    }
  }
}
