
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user authentication and roles from their profile
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isSuperAdmin(userId) {
      return getUserRole(userId) == 'superadmin';
    }

    function isDepositAdmin(userId) {
      return getUserRole(userId) == 'deposit_admin' || isSuperAdmin(userId);
    }

    function isMatchAdmin(userId) {
      return getUserRole(userId) == 'match_admin' || isSuperAdmin(userId);
    }

    function isAdmin(userId) {
      return isSuperAdmin(userId) || isDepositAdmin(userId) || isMatchAdmin(userId);
    }

    // Rules for User Profiles
    match /users/{userId} {
      // Any authenticated user can read profile data (for leaderboards, etc.)
      allow read: if isAuthenticated();
      
      // A user can create their own profile with default values.
      allow create: if isOwner(userId) 
                      && request.resource.data.uid == userId
                      && request.resource.data.role == 'user'
                      && request.resource.data.walletBalance == 0;
                      
      // A user can update their own non-critical info.
      // A superadmin can update any field on any user's profile.
      allow update: if (isOwner(userId) && !("role" in request.resource.data) && !("walletBalance" in request.resource.data))
                      || isSuperAdmin(request.auth.uid);
                      
      // Deleting users should be handled by a secure backend function, not allowed from the client.
      allow delete: if false; 
    }

    // Rules for Matches
    match /matches/{matchId} {
      // Any authenticated user can read match data.
      allow read: if isAuthenticated();
      
      // A user can create a match if they are the creator and the initial status is 'open'.
      allow create: if isAuthenticated() 
                      && request.resource.data.creatorId == request.auth.uid
                      && request.resource.data.status == 'open';

      // The creator can update their match only while it's 'open'.
      // A match admin or superadmin can update a match at any stage (e.g., for verification).
      allow update: if (resource.data.creatorId == request.auth.uid && resource.data.status == 'open')
                      || isMatchAdmin(request.auth.uid);
                      
      // The creator can only delete a match if it's still 'open'.
      allow delete: if resource.data.creatorId == request.auth.uid && resource.data.status == 'open';
    }

    // Rules for User Transactions (subcollection of users)
    match /users/{userId}/transactions/{transactionId} {
        // Only the user themselves or a superadmin can read their transaction history.
        allow read: if isOwner(userId) || isSuperAdmin(request.auth.uid);
        
        // Transactions must only be created via secure backend functions, not directly by clients.
        allow create, update, delete: if false; 
    }

    // Rules for Deposit Requests
    match /deposit-requests/{depositId} {
      // The user who made the request and deposit admins can read it.
      allow read: if isDepositAdmin(request.auth.uid) || isOwner(resource.data.userId);

      // A user can create their own deposit request with 'pending' status.
      allow create: if isAuthenticated() 
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.status == 'pending';

      // Only a deposit admin can update a request (to approve or reject it).
      // The status must be changing from 'pending'.
      allow update: if isDepositAdmin(request.auth.uid) && resource.data.status == 'pending';
      
      allow delete: if false;
    }
    
    // Rules for App Settings
    match /settings/payment {
      // Only a superadmin can read or change critical app settings like the UPI ID.
      allow read, write: if isSuperAdmin(request.auth.uid);
    }
  }
}
