
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSuperAdmin() {
      return getUserData(request.auth.uid).role == 'superadmin';
    }

    function isDepositAdmin() {
      let role = getUserData(request.auth.uid).role;
      return role == 'deposit_admin' || role == 'superadmin';
    }
    
    function isMatchAdmin() {
      let role = getUserData(request.auth.uid).role;
      return role == 'match_admin' || role == 'superadmin';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isExistingUser(userId) {
        return exists(/databases/$(database)/documents/users/$(userId));
    }
    
    function isValidBalance() {
        // Ensure wallet balance is a number and not negative.
        return request.resource.data.walletBalance is number 
          && request.resource.data.walletBalance >= 0;
    }

    // --- User Profiles ---
    match /users/{userId} {
      allow read: if isSignedIn();
      
      // Allow user to create their own profile on signup.
      // Must have 'user' role and 0 balance initially.
      allow create: if isOwner(userId) 
                    && request.resource.data.role == 'user'
                    && request.resource.data.walletBalance == 0;
      
      // Allow user to update their own profile (e.g., name, photoURL)
      // but NOT their role. Balance updates are handled by transactions.
      // Superadmin can update any field.
      allow update: if (isOwner(userId) && !('role' in request.resource.data.diff(resource.data).affectedKeys()) && isValidBalance())
                    || isSuperAdmin();

      allow delete: if isSuperAdmin();

      // --- User Transactions (Subcollection) ---
      match /transactions/{transactionId} {
        allow read: if isOwner(userId) || isSuperAdmin();
        // Transactions are created by server-side logic (functions) or validated client-side transactions (like match entry)
        // Allow create for user or admins for flexibility with client-side tx creation
        allow create: if isOwner(userId) || isDepositAdmin() || isSuperAdmin();
        allow update, delete: if false; // Transactions should be immutable
      }
    }
    
    // Allow superadmin to read all transactions via collection group query
    match /{path=**}/transactions/{transactionId} {
        allow read: if isSuperAdmin();
    }
    
    // --- Matches ---
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isExistingUser(request.auth.uid);
      allow update: if isSignedIn() && (resource.data.creatorId == request.auth.uid || isMatchAdmin() || isSuperAdmin());
      allow delete: if isMatchAdmin() || isSuperAdmin();

       match /messages/{messageId} {
        allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.players;
      }
    }
    
    // --- Deposit Requests ---
    match /deposit-requests/{depositId} {
        allow read: if isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin());
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow update: if isDepositAdmin(); 
        allow delete: if isSuperAdmin();
    }

    // --- Withdrawal Requests ---
    match /withdrawal-requests/{withdrawalId} {
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow read: if isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin());
        allow update: if isDepositAdmin();
        allow delete: if isSuperAdmin();
    }

    // --- KYC Requests ---
    match /kyc-requests/{kycId} {
        allow read: if isSignedIn() && (isOwner(resource.data.userId) || isSuperAdmin());
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow update: if isSuperAdmin();
        allow delete: if isSuperAdmin();
    }

    // --- Settings ---
    match /settings/payment {
        allow read: if isSignedIn();
        allow write: if isSuperAdmin();
    }
  }
}
