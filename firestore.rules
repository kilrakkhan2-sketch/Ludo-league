rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions --- //
    // Yah functions niyamon ko saaf aur padhne mein aasan banate hain.

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // User ka data (jisme role bhi hai) database se laata hai
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId));
    }

    // User ka role laata hai
    function getUserRole(userId) {
      return getUserData(userId).data.role;
    }

    // Alag-alag admin roles ko check karta hai
    function isSuperAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'superadmin';
    }

    function isDepositAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'deposit_admin';
    }

    function isKycAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'kyc_admin';
    }
    
    // --- Collection Rules --- //

    //== USERS Collection ==//
    // User ki profile data yahan save hota hai
    match /users/{userId} {
      // Padhein: Koi bhi admin ya user khud apna data padh sakta hai
      allow read: if isSignedIn() && (isOwner(userId) || isSuperAdmin() || isDepositAdmin() || isKycAdmin());
      
      // Banayein: User signup ke time apna document bana sakta hai
      allow create: if isOwner(userId);
      
      // Update Karein: User sirf apni profile (displayName, photoURL) update kar sakta hai.
      // Balance ya role jaisi cheezein sirf superadmin hi badal sakta hai.
      allow update: if (isSignedIn() && isOwner(userId) && request.resource.data.keys().hasOnly(['displayName', 'photoURL'])) || isSuperAdmin();
      
      // Delete Karein: Kisi ko bhi user delete karne ki anumati nahi hai (suraksha ke liye).
      allow delete: if false;
    }

    //== MATCHES Collection ==//
    // Ludo matches ka data
    match /matches/{matchId} {
      // Padhein: Koi bhi logged-in user sabhi matches dekh sakta hai.
      allow read: if isSignedIn();
      
      // Banayein: Koi bhi logged-in user match bana sakta hai.
      allow create: if isSignedIn();
      
      // Update Karein: Sirf match ke khiladi ya superadmin hi match ko update kar sakte hain (jaise result submit karna).
      allow update: if isSignedIn() && (request.auth.uid in resource.data.players || isSuperAdmin());
      
      // Delete Karein: Sirf superadmin hi match ko delete kar sakta hai.
      allow delete: if isSuperAdmin();
    }

    //== DEPOSITS Collection ==//
    // Paise deposit karne ke requests
    match /deposits/{depositId} {
      // Padhein: User apne deposits, aur deposit/super admin sabke deposits dekh sakte hain.
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin() || isSuperAdmin());

      // Banayein: User sirf apne liye deposit request bana sakta hai.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      // Update Karein: Sirf deposit/super admin hi deposit ka status (approved/rejected) badal sakte hain.
      allow update: if (isDepositAdmin() || isSuperAdmin()) && request.resource.data.keys().hasOnly(['status', 'verifiedBy']);

      // Delete Karein: Kisi ko anumati nahi hai.
      allow delete: if false;
    }

    //== WITHDRAWALS Collection ==//
    // Paise nikalne ke requests
    match /withdrawals/{withdrawalId} {
      // Padhein: User apne withdrawals, aur deposit/super admin sabke withdrawals dekh sakte hain.
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isDepositAdmin() || isSuperAdmin());

      // Banayein: User sirf apne liye withdrawal request bana sakta hai.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      // Update Karein: Sirf deposit/super admin hi status badal sakte hain.
      allow update: if (isDepositAdmin() || isSuperAdmin()) && request.resource.data.keys().hasOnly(['status', 'processedBy']);

      // Delete Karein: Kisi ko anumati nahi hai.
      allow delete: if false;
    }

    //== KYC_SUBMISSIONS Collection ==//
    // KYC documents ki details
    match /kyc_submissions/{submissionId} {
      // Padhein: User apni submission, aur kyc/super admin sabki submissions dekh sakte hain.
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isKycAdmin() || isSuperAdmin());

      // Banayein: User sirf apne liye KYC request bana sakta hai.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      // Update Karein: Sirf kyc/super admin hi status (verified/rejected) badal sakte hain.
      allow update: if (isKycAdmin() || isSuperAdmin()) && request.resource.data.keys().hasOnly(['status', 'reviewedBy']);

      // Delete Karein: Kisi ko anumati nahi hai.
      allow delete: if false;
    }

    //== TRANSACTIONS Collection ==//
    // Sabhi financial লেনদেন ka record (deposit, withdrawal, match win/loss)
    match /transactions/{transactionId} {
      // Padhein: User apne transactions, aur koi bhi admin sabke transactions dekh sakta hai (auditing ke liye).
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isSuperAdmin() || isDepositAdmin());

      // LIKHNA (Create, Update, Delete): KISI KO BHI DIRECTLY LIKHNE KI ANUMATI NAHI HAI.
      // Transactions hamesha server-side (Cloud Functions) se hi banaye jaane chahiye taaki balance ke saath chhed-chhad na ho.
      allow write: if false;
    }
  }
}