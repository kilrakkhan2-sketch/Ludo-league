
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can read their own profile, and only update their own profile.
    match /users/{userId} {
      allow read;
      allow write: if isOwner(userId);
    }
    
    // KYC applications can only be read by the user who submitted them or an admin.
    // Only the user can create their own application.
    match /kycApplications/{applicationId} {
      allow read: if isOwner(applicationId) || request.auth.token.isAdmin == true;
      allow create: if isOwner(request.resource.data.userId);
      allow update: if request.auth.token.isAdmin == true;
    }
    
    match /matches/{matchId} {
      // Any authenticated user can view matches.
      allow read: if request.auth != null;
      // Anyone can create a match, as long as they are the creator.
      allow create: if isOwner(request.resource.data.creatorId);
      // Any authenticated user can join (update) a match. Admins can also update.
      allow update: if request.auth != null || request.auth.token.isAdmin == true;
    }

    match /matches/{matchId}/results/{userId} {
      // Anyone can read results.
      allow read: if request.auth != null;
      // Only the authenticated user can submit their own result.
      allow create, update: if isOwner(userId);
    }

    // Transactions can be read by the user they belong to or an admin.
    // Users can only create transactions for themselves.
    match /transactions/{transactionId} {
      allow read: if isOwner(get(/databases/$(database)/documents/transactions/$(transactionId)).data.userId) || request.auth.token.isAdmin == true;
      allow create: if isOwner(request.resource.data.userId);
    }

    // Users can create their own deposit/withdrawal requests. Admins can update them.
    match /depositRequests/{depositId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read, update: if request.auth.token.isAdmin == true;
    }
    
    match /withdrawalRequests/{withdrawalId} {
       allow create: if isOwner(request.resource.data.userId);
       allow read, update: if request.auth.token.isAdmin == true;
    }

    match /adminLogs/{logId} {
      allow read, create, write: if request.auth.token.isAdmin == true;
    }

    match /tournaments/{tournamentId} {
      allow read: if request.auth != null;
      allow create, write: if request.auth.token.isAdmin == true;
    }
    
    match /tournaments/{tournamentId}/matches/{matchId} {
       allow read: if request.auth != null;
       allow create, write: if request.auth.token.isAdmin == true;
    }

  }
}
