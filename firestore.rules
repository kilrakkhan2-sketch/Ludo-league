
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========= Helper Functions =========
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for custom admin claim OR a specific field in the user's document.
      return request.auth != null && (
        request.auth.token.admin == true ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true)
      );
    }

    // ========= ADMIN RULE: Global Read/Write Access =========
    // Admins can read and write anything, anywhere. This is the simplest rule
    // but specific denials below can still override this.
    match /{path=**} {
      allow read, write: if isAdmin();
    }

    // ========= Rules for Non-Admin Authenticated Users =========

    // User Profile Documents
    match /users/{userId} {
      allow read: if request.auth != null; // Any auth user can read profiles.
      allow create, update: if isOwner(userId); // Only owner can write to their profile.
    }
    
    // Matchmaking Queue
    match /matchmakingQueue/{userId} {
      allow read, create, delete: if isOwner(userId);
      allow update: if false;
    }
    // Allow any authenticated user to list the queue to see player counts
    match /matchmakingQueue/{docId} {
        allow list: if request.auth != null;
    }


    // KYC Applications
    match /kycApplications/{kycId} {
      allow get, create: if isOwner(request.resource.data.userId) || isOwner(resource.data.userId);
      allow update, list: if false;
    }

    // Matches Collection
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow create: if false; // Handled by Cloud Function
      allow update: if (request.auth != null && request.auth.uid in resource.data.playerIds) || isAdmin();
    }

    // Match Results Sub-collection
    match /matches/{matchId}/results/{userId} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId);
    }

    // Transactions Collection (highly restricted)
    match /transactions/{transactionId} {
      allow read: if isOwner(resource.data.userId);
      allow create, update, delete: if false; // Functions only
      allow list: if request.auth.uid == request.query.filters[0].value;
    }
    
    // Deposit Requests
    match /depositRequests/{depositId} {
        allow read: if isOwner(resource.data.userId);
        allow create: if isOwner(request.resource.data.userId);
        allow list: if request.auth.uid == request.query.filters[0].value;
        allow update, delete: if false;
    }
    
    // Withdrawal Requests
    match /withdrawalRequests/{withdrawalId} {
        allow read: if isOwner(resource.data.userId);
        allow create: if isOwner(request.resource.data.userId);
        allow list: if request.auth.uid == request.query.filters[0].value;
        allow update, delete: if false;
    }

    // Support Chat
    match /supportChats/{userId} {
      // Admins can list all chat threads to display in the support inbox.
      allow list: if isAdmin();
      // A user can get their own chat document, and an admin can get any.
      allow get: if isOwner(userId) || isAdmin();

      match /messages/{messageId} {
        // A user can read/write to their own chat thread.
        // An admin can read/write to ANY chat thread.
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Read-only collections for all authenticated users.
    match /tournaments/{doc=**} { allow read: if request.auth != null; }
    match /news/{doc=**} { allow read: if request.auth != null; }
    match /upiConfiguration/active { allow read: if request.auth != null; }
    match /referralConfiguration/settings { allow get: if request.auth != null; }

    // Admin-only collections (write access covered by global rule).
    // Explicitly deny read for non-admins to be safe.
    match /adminLogs/{logId} {
      allow read: if false;
    }
  }
}
