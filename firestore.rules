
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles from their profile
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isSuperAdmin(userId) {
      return getUserRole(userId) == 'superadmin';
    }

    function isDepositAdmin(userId) {
      return getUserRole(userId) == 'deposit_admin' || isSuperAdmin(userId);
    }

    function isMatchAdmin(userId) {
      return getUserRole(userId) == 'match_admin' || isSuperAdmin(userId);
    }
    
    function isAdmin(userId) {
        return isSuperAdmin(userId) || isDepositAdmin(userId) || isMatchAdmin(userId);
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for User Profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      
      allow create: if isOwner(userId) 
                      && request.resource.data.uid == userId
                      && request.resource.data.role == 'user'
                      && request.resource.data.walletBalance == 0;
                      
      allow update: if (isOwner(userId) && !("role" in request.resource.data) && !("walletBalance" in request.resource.data))
                      || isSuperAdmin(request.auth.uid);
                      
      // Deleting users should be handled by a backend function
      allow delete: if false; 
    }

    // Rules for Matches
    match /matches/{matchId} {
      allow read: if isAuthenticated();
      
      allow create: if isAuthenticated() 
                      && request.resource.data.creatorId == request.auth.uid
                      && request.resource.data.status == 'open';

      allow update: if (resource.data.creatorId == request.auth.uid && resource.data.status == 'open')
                      || isMatchAdmin(request.auth.uid);
                      
      allow delete: if resource.data.creatorId == request.auth.uid && resource.data.status == 'open';
    }

    // Rules for User Transactions (subcollection of users)
    match /users/{userId}/transactions/{transactionId} {
        // Only the user themselves or a superadmin can see their transactions
        allow read: if isOwner(userId) || isSuperAdmin(request.auth.uid);
        
        // Transactions should only be created via backend functions, not directly by clients.
        allow create: if false; 
        allow update: if false;
        allow delete: if false;
    }

    // Rules for Deposit Requests
    match /deposit-requests/{depositId} {
      allow read: if isDepositAdmin(request.auth.uid) || isOwner(resource.data.userId);

      allow create: if isAuthenticated() 
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.status == 'pending';

      allow update: if isDepositAdmin(request.auth.uid) && request.resource.data.status != 'pending';
      
      allow delete: if false;
    }
    
    // Rules for App Settings
    match /settings/payment {
      allow read, write: if isSuperAdmin(request.auth.uid);
    }
  }
}
