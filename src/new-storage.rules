
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ========= Helper Functions =========
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check for custom admin claim OR a specific field in the user's document.
      return request.auth != null && (
        request.auth.token.admin == true ||
        (exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
         get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true)
      );
    }

    // ========= Specific Path Rules =========
    
    // Profile Pictures: Users can read anyone's, but only write their own. Admins can do anything.
    match /profile-pictures/{userId}/{fileName} {
      allow read: if request.auth != null || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // KYC Documents: Users can only read/write their own. Admins can do anything.
    match /kyc/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Deposit Screenshots: Users can only read/write their own. Admins can do anything.
    match /deposits/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Match Result Screenshots: Authenticated users can read.
    // Users can only write into their own subfolder within a match folder.
    match /match-results/{matchId}/{userId}/{allPaths=**} {
        allow read: if request.auth != null || isAdmin();
        allow write: if isOwner(userId) || isAdmin();
    }
    
    // Public content is readable by anyone (even unauthenticated).
    // Write access should be restricted, e.g., only for admins.
    match /public/{allPaths=**} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Fallback rule: Deny all other access by default for security.
    // This is implicit, but can be made explicit if needed.
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }
  }
}
